@page "/"
@using System.Net

@inject Client.Services.UserService LoginService
@inject NavigationManager Navigation

@if (isLoading)
{
    <p>Logging in...</p>
}
else
{
    <div class="login-container">
        <div class="login-card">
            <img src="images/Buddy2Go-logo.png" alt="Buddy2Go Logo" class="logo" />
            <h1 class="app-title">Buddy2Go</h1>
            <p class="subtitle">Veilig samen onderweg</p>
            
            <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />
                <div class="register-header">
                    <button type="button" class="register-btn" @onclick="GoToRegister">Registreren</button>
                </div>
                    <div class="form-group">
                        <InputText @bind-Value="loginModel.Username"
                               class="input-field-login"
                               placeholder="Gebruikersnaam of e-mailadres" />
                    </div>

                <div class="form-group">
                    <InputText @bind-Value="loginModel.Password"
                               class="input-field-login"
                               type="password"
                               placeholder="Wachtwoord" />
                     </div>

                <button type="submit" class="login-btn">Inloggen</button>

                <ValidationSummary />

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <p class="error-message">@errorMessage</p>
                }
            </EditForm>

            <div class="help-icon">
                <span>?</span>
            </div>
        </div>
    </div>
}

@code {
    private LoginDto loginModel = new();
    private string? errorMessage;
    private bool isLoading = false;


    protected override async Task OnInitializedAsync()
    {
        ServiceResult? result = await LoginService.IsLoggedInAsync();
        if (result.IsSuccess)
        {
            Navigation.NavigateTo("/Journeys");
        }
    }
    private async Task LoginAlice()
    {
        loginModel.Username = "Alice";
        loginModel.Password = "Password123!";
        await HandleLogin();
    }
    private async Task LoginBob()
    {
        loginModel.Username = "bob";
        loginModel.Password = "Password123!";
        await HandleLogin();
    }
    private async Task LoginCharlie()
    {
        loginModel.Username = "Charlie";
        loginModel.Password = "Password123!";
        await HandleLogin();
    }
    private async Task LoginJoseph()
    {
        loginModel.Username = "Joseph";
        loginModel.Password = "Password123!";
        await HandleLogin();
    }
    private async Task LoginDiana()
    {
        loginModel.Username = "Diana";
        loginModel.Password = "Password123!";
        await HandleLogin();
    }


    private async Task HandleLogin()
    {
        errorMessage = null;
        isLoading = true;

        ServiceResult? result = await LoginService.LoginAsync(loginModel.Username.Trim(), loginModel.Password);

        if (result.IsSuccess)
            Navigation.NavigateTo("/Journeys");
        else
            errorMessage = result.Message ?? "Login failed. Please try again.";

        loginModel.Password = string.Empty;
        isLoading = false;
    }

    private async Task GoToRegister()
    {
        Navigation.NavigateTo("/Register");
    }
}
