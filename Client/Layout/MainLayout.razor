@using Shared.Models.Dtos.Users
@inherits LayoutComponentBase
@inject Client.Services.UserService LoginService
@inject NavigationManager Navigation


<div class="layout-root">
    <div class="layout-content">
        @Body
    </div>

    <div class="bottom-nav">
        <button class="nav-button" @onclick="@(() => NavigateTo("/JourneyHome"))">Journeys</button>
        <button class="nav-button" @onclick="@(() => NavigateTo("/buddys"))">Buddys</button>
        <button class="nav-button" @onclick ="@(() => NavigateTo("/dangerous-places"))">
            Dangerous <br /> Places
        </button>
        <button class="nav-button" @onclick ="@(() => NavigateTo("/settings"))">Settings</button>
        <button class="nav-button logout-button" @onclick="Logout">
            @username <br /> Logout
        </button>
    </div>
</div>

@code {
    private string username = string.Empty;
    protected override async Task OnInitializedAsync()
    {
        ServiceResult<UserDto>? result = await LoginService.GetCurrentUserAsync();

        if (!result.IsSuccess)
            Navigation.NavigateTo("/");
        else if (result.Data != null)
            username = result.Data.Username;
    }

    private void NavigateTo(string url)
    {
        Navigation.NavigateTo(url);
    }


    private async Task Logout()
    {
        ServiceResult? result = await LoginService.LogoutAsync();

        if (result.IsSuccess)
            Navigation.NavigateTo("/");
    }
}
